{
  "name": "rdebrid-worker",
  "version": "0.0.2",
  "private": true,
  "scripts": {
    "dev": "npm run build:client && wrangler dev",
    "dev:ui": "vite --host 0.0.0.0",
    "dev:worker": "wrangler dev",
    "dev:watch": "npm run _dev-setup && vite build --watch",
    "dev:live": "bash ./scripts/dev-live.sh",
    "dev:full": "npm run dev:watch & npm run server",
    "server": "wrangler dev",
    "client": "vite",
    "typecheck": "tsc --noEmit",
    "typecheck:server": "tsc --noEmit -p tsconfig.server.json",
    "build": "npm run build:client && npm run build:server",
    "build:client": "npm run _dev-setup && vite build",
    "build:server": "vite build -c vite.server.config.mts",
    "test:routes": "bash scripts/smoke-routes.sh",
    "update": "pnpm up --latest",
    "deploy": "npm run build:client && wrangler deploy",
    "_dev-setup": "[ -d node_modules/@vitejs ] || (echo 'ğŸ“¦ Installing UI dependencies...' && mv package.json package.json.bak && cp package.dev.json package.json && npm install --legacy-peer-deps && mv package.json.bak package.json)"
  },
  "dependencies": {
    "bencode": "^4.0.0",
    "fast-xml-parser": "^4.5.0",
    "feaxios": "^0.0.23",
    "hono": "^4.6.9",
    "magnet-uri": "^7.0.5",
    "p-limit": "^6.1.0",
    "uint8-util": "^2.2.5",
    "valibot": "1.0.0-beta.3",
    "wrangler": "^3.96.0",
    "zod": "^3.23.8"
  }
}
